# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_size = 2
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{pug,jade,twig,html}]
indent_size = 3
indent_style = tab

[*.{ts,js,scss}]
max_line_length = 100

[*.{ts,js}]
quote_type = single
spaces_around_operators = true
