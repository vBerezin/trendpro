include ~components/section/mixin
include ~components/section-head/mixin
include ~components/section-title/mixin
include ~components/container/mixin
include ~components/image/mixin
include ~components/picture/mixin
include ~components/icon/mixin
include ~components/swiper/mixin
include ~components/swiper-slide/mixin
include ~containers/icon-box/mixin

+section({
	class: ['section-team', 'js-section-team']
})
	+container
		.section-team__inner
			.section-team__head
				+section-title Наша команда
				h4.section-team__subtitle Верим в то, что делаем!
				.section-team__text
					p Каждый из нас - профессионал в своем деле.
					p Это помогает разграничивать задачи и работать эффективно. Владеем обширным списком навыков, любим интересные проекты и постоянно учимся.
				.section-team__info
					.section-team__info__image
						+picture({
							src: '/images/team.png',
							srcset: {
								'2x': '/images/team@2x.png'
							},
							source: [
								{
									media: '(min-width: 1024px)',
									src: '/images/team-desktop.png',
									srcset: {
										'2x': '/images/team-desktop@2x.png'
									},
									type: 'image/png'
								},
								{
									media: '(min-width: 640px)',
									src: '/images/team-tablet.png',
									srcset: {
										'2x': '/images/team-tablet@2x.png'
									},
									type: 'image/png'
								}
							]
						})
					.section-team__info__body
						.section-team__info-item
							.section-team__info-item__title 10
							.section-team__info-item__text лет на рынке Рунета
						.section-team__info-item
							.section-team__info-item__title 80+
							.section-team__info-item__text выполненных проектов
						.section-team__info-item
							.section-team__info-item__title &#8734;
							.section-team__info-item__text креативных идей
			.section-team__slider
				+swiper({
					attributes: {
						'data-ref': 'slider'
					}
				})
					each item in Array(2)
						+swiper-slide
							article.section-team__slide
								.section-team__slide__image
									+picture({
										src: '/images/team-boss.png',
										srcset: {
											'2x': '/images/team-boss@2x.png'
										},
										source: [
											{
												media: '(min-width: 1024px)',
												src: '/images/team-boss-desktop.png',
												srcset: {
													'2x': '/images/team-boss-desktop@2x.png'
												},
												type: 'image/png'
											},
											{
												media: '(min-width: 640px)',
												src: '/images/team-boss-tablet.png',
												srcset: {
													'2x': '/images/team-boss-tablet@2x.png'
												},
												type: 'image/png'
											}
										]
									})
								.section-team__slide__body
									h4.section-team__slide__title Александр Репин
									ul.section-team__slide__list
										li Генеральный директор TREND PRO
										li Главный по маркетингу в CLUB 500 с 2018 года
										li Лично продвигаю все свои направления в бизнесе на протяжении 23 лет
									.section-team__slide__divider
									blockquote.section-team__slide__blockquote
										strong Мы дорожим репутацией и каждым клиентом.
										|#{' '}Я лично проконтролирую соблюдение всех договоренностей и сервис.
									.section-team__slide__social.section-team__social
										+icon-box({
											class: 'section-team__social__link',
											icon: 'telegram',
											mods: ['small', 'telegram2'],
											attributes: {
												href: '#'
											}
										})
										+icon-box({
											class: 'section-team__social__link',
											icon: 'instagram',
											mods: ['small', 'instagram'],
											attributes: {
												href: '#'
											}
										})
										.section-team__social__name business_repin
				.section-team__swipe
					+image({
						src: '/images/swipe.gif'
					})
				.section-team__slider-nav
					button.section-team__slider-prev(data-ref="slider.prev")
						+icon('arrow-left')
					button.section-team__slider-next(data-ref="slider.next")
						+icon('arrow-right')
